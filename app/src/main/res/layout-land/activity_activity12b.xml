<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity12b">




    <TextView
        android:id="@+id/show_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFF00"
        android:gravity="center"
        android:text="@string/_0"
        android:textSize="160sp"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layout"
        android:layout_marginHorizontal="5dp"
        />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@+id/show_count"
        app:layout_constraintBottom_toBottomOf="@+id/show_count"
        app:layout_constraintStart_toStartOf="parent"

        >

        <Button
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showToast"
            android:text="@string/toast"
            android:layout_weight="1"

            android:layout_marginHorizontal="5dp"
            />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#505050"
            android:onClick="zero"
            android:text="@string/zero" />

        <Button
            android:id="@+id/count213"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="countUp"
            android:text="@string/count"
            android:layout_weight="1"

            android:layout_marginHorizontal="5dp"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>